rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return isSignedIn() && request.auth.uid == userId; }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
      match /pets/{petId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /savedAdventures/{id} {
      allow read, write: if isOwner(request.resource.data.userId) || isOwner(resource.data.userId);
    }

    match /adventureSessions/{id} {
      allow read, write: if isOwner(request.resource.data.userId) || isOwner(resource.data.userId);
    }

    match /userProgress/{userId} { allow read, write: if isOwner(userId); }
    match /topicPreferences/{userId} { allow read, write: if isOwner(userId); }
    match /adventureState/{userId} { allow read, write: if isOwner(userId); }

    // Pet data collections for the new unified pet service
    match /userPetData/{userId} {
      allow read, write: if isOwner(userId);
      match /petProgress/{petId} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}


